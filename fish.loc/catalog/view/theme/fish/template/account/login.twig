{{ header }}
<div id="account-login" class="account-login">

  <header class="pages-header">
    <div class="container">
      <h1 class="pages-header__title">{{ heading_title }} {% if weight %} ({{ weight }}) {% endif %}</h1>
      <ul class="pages-header__breadcrumbs">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </header>

  <span class="breadcrumb"></span>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}

  <div id="content" class="container account-login__container">
      <div class="authForm">
        <h2 class="authForm__title">Авторизация</h2>
        <p class="authForm__desc">{{ text_i_am_returning_customer }}</p>
        <form action="{{ action }}" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control input" />
          </div>
          <div class="form-group">
            <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control input" />
            <a href="{{ forgotten }}">{{ text_forgotten }}</a>
          </div>
          <br>
          <input type="submit" value="{{ button_login }}" class="btn button" />
          <a href="{{ register }}" class="link authForm__register">Регистрация</a>
          {% if redirect %}
            <input type="hidden" name="redirect" value="{{ redirect }}" />
          {% endif %}
        </form>
      </div>
  </div>

</div>
{{ footer }}