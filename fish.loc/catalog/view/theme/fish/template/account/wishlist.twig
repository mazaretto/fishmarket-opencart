{{ header }}
<div id="account-wishlist" class="account-wishlist">

  <header class="pages-header">
    <div class="container">
      <h1 class="pages-header__title">{{ heading_title }} {% if weight %} ({{ weight }}) {% endif %}</h1>
      <ul class="pages-header__breadcrumbs">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </header>

  <div id="content" class="container account-wishlist__container">

    <div class="account-wishlist__products">

      {% if products %}
        {% for product in products %}
          <div class="product-layout product-item">
            <div class="product-item__top">
              <a class="product-item__top_like" href="{{ product.remove }}" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger">
                <svg width="22" height="21" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M17.13 8.14s-.482 5.612-.761 7.976c-.133 1.13-.875 1.79-2.09 1.812a191.14 191.14 0 01-6.94-.004c-1.169-.023-1.898-.693-2.029-1.802-.28-2.385-.76-7.983-.76-7.983m13.805-2.69H3.325m12.134 0c-.696 0-1.295-.462-1.432-1.103l-.215-1.014c-.133-.467-.583-.79-1.096-.79H8.963c-.514 0-.964.323-1.097.79l-.215 1.014c-.137.64-.736 1.103-1.432 1.103" stroke="#E36363" stroke-linecap="round" stroke-linejoin="round"/></svg>
              </a>
            </div>
            <div class="product-item__thumb">
              <a href="{{ product.href }}" class="product-item__thumb_link">
                <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" />
              </a>
            </div>
            <div class="product-item__content">
              <h4 class="product-item__title"><a href="{{ product.href }}">{{ product.name }}</a></h4>
            </div>
            <div class="product-item__button">
              <button type="button" onclick="cart.add('{{ product.product_id }}');" data-toggle="tooltip" title="{{ button_cart }}" class="button">Добавить в корзину</button>
            </div>
            <span class="product-item__price">
              {% if product.price %}
                <p class="price">
                  {% if not product.special %}
                    <span class="price">{{ product.price }}</span>
                  {% else %}
                    <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
                  {% endif %}
                </p>
              {% endif %}
            </span>

          </div>
        {% endfor %}
      {% else %}
        <p>{{ text_empty }}</p>
      {% endif %}
    </div>

  </div>
</div>
{{ footer }}